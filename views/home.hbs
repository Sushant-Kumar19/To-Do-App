<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>To-Do Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-4">
    <header class="mb-4 text-center">
      <h1>üìã Task Dashboard</h1>
      <a href="/login" class="btn btn-danger mt-2">Logout</a>
    </header>

    <div class="row g-4">
      <!-- Section 1: Add Task -->
      <div class="col-md-4">
        <div class="card p-3 shadow-sm">
          <h4>Add New Task</h4>
          <form action="/add-task" method="POST">
            <div class="mb-2">
              <input type="text" name="task" class="form-control" placeholder="Task name" required />
            </div>
            <div class="mb-2">
              <input type="datetime-local" name="dueDateTime" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Add Task</button>
          </form>
        </div>
      </div>

      <!-- Section 2: Task List with Delete -->
      <div class="col-md-4">
        <div class="card p-3 shadow-sm">
          <h4>Your Tasks</h4>
          {{#if tasks.length}}
            <ul class="list-group">
              {{#each tasks}}
                <li class="list-group-item d-flex justify-content-between align-items-start">
                  <div>
                    <strong>{{this.task}}</strong><br>
                    <small>Due: {{this.dueDateTime}}</small>
                  </div>
                  <form action="/delete-task/{{this._id}}" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <p class="text-muted mt-3">No tasks added yet.</p>
          {{/if}}
        </div>
      </div>

      <!-- Section 3: Remaining Time for Today -->
      <div class="col-md-4">
        <div class="card p-3 shadow-sm">
          <h4>‚è∞ Time Left Today</h4>
          {{#if todayTasks.length}}
            <ul class="list-group">
              {{#each todayTasks}}
                <li class="list-group-item">
                  <strong>{{this.task}}</strong><br>
                  <small>
                    {{this.remainingTime}} left
                  </small>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <p class="text-muted mt-3">No tasks due today.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

</body>
</html>
